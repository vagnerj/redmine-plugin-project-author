<% if @principals_by_role.any? %>
  <div class="members box">
    <h3 class="icon icon-group"><%= l(:label_member_plural) %></h3>
    <% @principals_by_role.keys.sort.each do |role| %>
      <p><span class="label"><%= role %>
        :</span> <%= @principals_by_role[role].sort.collect { |p| link_to_user p }.join(", ").html_safe %></p>
    <% end %>

    <%= render :partial => 'projects/members_box_author' %>

  </div>
<% else %>

  <% if !(@project.author.nil?) %>
    <div class="members box">
      <h3 class="icon icon-group"><%= l(:label_member_plural) %></h3>

      <%= render :partial => 'projects/members_box_author' %>
    </div>
  <% end %>

<% end %>
